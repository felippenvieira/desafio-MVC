@model IEnumerable<desafio_mvc.Models.Receita>

@{
    Layout = "_LayoutAdmin";
}

<h1 class="display-4">Receitas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">NOVA RECEITA</a>
</p>

<script>
    $(document).ready(function () {
        $('#receitas').DataTable();
    });
</script>

<table id="receitas" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UrlImagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoPreparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModoPreparo)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="rounded img-fluid img-thumbnail" src="@Html.DisplayFor(modelItem => item.UrlImagem)">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TempoPreparo)
                </td>
                <td>
                    @foreach (var modelIn in item.Ingredientes)
                    {
                        @Html.DisplayFor(model => modelIn.Nome)
                        <br>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModoPreparo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">EDITAR</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">DETALHAR</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">APAGAR</a>
                </td>
            </tr>
        }
    </tbody>
</table>
